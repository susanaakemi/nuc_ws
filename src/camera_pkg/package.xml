<?xml version="1.0"?>
<?xml-model href="http://download.ros.org/schema/package_format3.xsd" schematypens="http://www.w3.org/2001/XMLSchema"?>
<package format="3">
  <name>camera_pkg</name>
  <version>0.1.0</version>
  <description>Detección de rocas con YOLOv8 en ROS 2 Humble</description>
  <maintainer email="a01640939@tec.mx">robotec</maintainer>
  <license>Apache-2.0</license>

  <!-- Dependencias de compilación -->
  <buildtool_depend>ament_python</buildtool_depend>

  <!-- Dependencias de ejecución -->
  <depend>rclpy</depend>
  <depend>sensor_msgs</depend>
  <depend>geometry_msgs</depend>
  <depend>cv_bridge</depend>
  <depend>opencv_python</depend>       <!-- Para OpenCV en Python -->
  <depend>ultralytics</depend>         <!-- Para YOLOv8 -->
  <depend>numpy</depend>

  <export>
    <build_type>ament_python</build_type>
  </export>
</package>
